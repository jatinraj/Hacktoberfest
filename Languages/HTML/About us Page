<script type="text/javascript">

    TweenMax.from(".border", 3, {
            delay: 1.2,
            rotation: 90,
            transformOrigin: "50% 50%",
            opacity: 0,
            x: -180,
            ease: Expo.easeInOut
            });
    TweenMax.to(".text", 2 ,{
       delay:0.5,
       x:40,
       opacity:0.8,
       ease:Expo.easeInOut
    });
  TweenMax.to(".social",2,{
     delay:0.8,
     x:10,
     opacity:1,
     ease:Expo.ease
  });
    TweenMax.to(".num",2,{
       delay:0.3,
       scale:2,
       ease:Expo.easeInOut,opacity:0.8
    });
TweenMax.to(".yo",2,{
  delay:1,
  scale:1.2,
  ease:Expo.ease,
  opacity:1
});

TweenMax.to(".inner-container",2,{
  delay:1.2,
  x:50,
  ease:Expo.easeInOut,
  opacity:0.8
});

</script>
